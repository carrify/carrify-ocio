<div class="row list list-{{category}}">
    <div class="col-100 no-padding">
        <div class="row">
            <a href="javascript:void(0);" class="col-100 go-back bc-{{category}}" data-link-home>
                <i class="material-icons arrow-back">keyboard_arrow_left</i>
                <span class="column-icon">
                  <i class="material-icons">{{getCategoryProperty category 'icon'}}</i>
                </span>
                <span class="column-text">{{getCategoryProperty category 'description'}}</span>
            </a>
        </div>
        <div class="row map" id="map"></div>
        <div class="row">
            <%= partial('partials/ad_small', :locals => {
                    :the_class => 'back-{{category}}',
                    :index => 0
                }) %>
        </div>
        <div class="row">
            <%= partial('partials/ad_small', :locals => {
                    :the_class => 'back-{{category}}',
                    :index => 1
                }) %>
            <%= partial('partials/ad_small', :locals => {
                    :the_class => 'back-{{category}}',
                    :index => 2
                }) %>
        </div>
        <div class="row">
            <%= partial('partials/ad_small', :locals => {
                    :the_class => 'back-{{category}}',
                    :index => 3
                }) %>
            <%= partial('partials/ad_small', :locals => {
                    :the_class => 'back-{{category}}',
                    :index => 4
                }) %>
        </div>
    </div>
    <div class="col-100 no-padding ad-list back-{{category}}" id="list_carousel_container" data-carousel="{{category}}" data-template="list_carousel">
        <div class="ad-list-content bds-default">
            <div class="advert-loading"></div>
        </div>
    </div>
</div>
